            android:layout_height="wrap_content"
            android:text="TukangJamur123"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Product Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

